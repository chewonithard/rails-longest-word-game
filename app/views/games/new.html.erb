<h1> New game </h1>

<% @array.each do |i| %>
<%= i.capitalize %>
<% end  %>

<h2>What is the longest word you can find?</h2>

<form action="/score" method="post">
  <input type="text" name="word" placeholder="Enter text">
  <input type="submit" value="Play">
  <input id="array" name="array" type="hidden" value="<%= @array %>" />
  <input id="time" name="time" type="hidden" value="<%= Time.now - @time_start %>" />
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
